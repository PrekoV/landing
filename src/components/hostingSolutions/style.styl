.HostingSolutions
    height 100%
    width 100%
    background-color #fff
    display flex
    justify-content center
    align-items center
    .section2_wrapper
        margin: 40px auto 
        max-width 1170px
        display flex
        justify-content space-between
        flex-direction column
        .title_wrapper
            display flex
            justify-content space-around
            flex-direction column
            align-items: center
            .title
                text-align center
                font-size 24px
                color #444
            .undertitle
                line-height 22px
                font-size 15px
                text-align center
                color #888
        .square_wrapper
            display: flex
            flex-wrap: wrap
            justify-content: space-around
            margin: 50px auto 0 auto
            // display grid
            // padding-left 20px
            // grid-template-columns 260px 260px 260px 260px
            // grid-template-rows 236px 236px
            // grid-column-gap 30px
            // grid-row-gap 40px
            .square:hover
                border-color #ce4624
                cursor pointer
            .square
                border: 1px solid #ddd
                width: 260px
                max-height: 240px
                min-height: 220px
                text-align center
                padding-top 20px
                margin-bottom: 40px
                padding-bottom: 15px
                img 
                    max-width: 70px
                    max-height: 71px
                .square_name
                    padding-top: 15px
                    text-align center
                    font-weight bold
                    font-size 22px
                    color: #ce4624
                    overflow: hidden;
                    text-overflow: ellipsis
                .square_text
                    color #878787
                    padding 10px 10px
                    font-size: 14px
                    overflow: hidden;
                    text-overflow: ellipsis
        form
            width: 100%
            display: flex
            flex-direction: column
            justify-content: center
            align-items: center
            input
                height: 50px
                width: 70%
                text-indent: 15px
                border-radius: 4px 0px 0px 4px
                border: solid 1px  black
                margin: 5px
            button
                height: 30px
                padding: 0 7px
                border-radius: 0px 4px 4px 0px
                border: none
                color: #fff
                background-color black
                text-transform: uppercase
                font-size: 16px
                font-weight: bold
                cursor pointer
            .file_label_wrapper
                display: flex
                justify-content: space-between
                width: 70%
                align-items: center
                #file_label
                    border: solid 1px #fff
                    padding: 5px 10px
                    cursor pointer
                    color: #fff
                    background-color #ce4624