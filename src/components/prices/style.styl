.Prices
    height 100%
    width: 100%
    background-color #F6F6F6
    border solid 1px #ddd
    .section5_wrapper
        max-width: 1170px
        margin: 60px auto 40px auto
        display: flex
        justify-content: space-between
        text-align: center
        flex-wrap: wrap
        .price
            border-top: solid 5px #ce4624
            margin: 0 auto
            @media screen and (max-width: 400px)
                width: 100%
            .title
                background-color #fff
                padding: 0 40px
                color #656565
                font-weight bold
                font-size 26px
                text-align center
                padding 28px 0
                margin 0
            .in_month
                background-color #ce4624
                width 100%
                padding 20px 40px
                color #fff
                font-weight bold
                text-align center
                font-size 40px
                .per_month
                    font-size 15px
                    font-weight normal
                    display: block
            .instructions
                list-style none
                text-align center
                padding: 0 40px
                color #878787
                font-size 16px
                background-color #fff
                .text
                    padding 15px 0
            .order
                color #fff
                background #ce4624
                font-size 18px
                padding: 0 40px
                width 100%
                font-weight bold
                text-align center
                padding 13px 0px
                outline: none 
                border none
                margin-bottom: 20px