.SubscribeOnNews
    height 100%
    width 100%
    background-color #ce4624
    .section9_wrapper
        margin: 0 auto
        max-width: 1170px
        .form_wrapper
            display: flex
            padding: 28px 0
            justify-content: center
            align-items: center
            @media screen and (max-width 670px)
                flex-direction: column
            .title
                flex: 1
                color #fff
                font-size 18px
            .input_container
                width: 100%
                display: flex
                justify-content: center
                flex: 3
                align-items: center
                input
                    height: 50px
                    width: 70%
                    text-indent: 15px
                    border-radius: 4px 0px 0px 4px
                    border: none
                button
                    height: 50px
                    background: #000
                    padding: 0 10px
                    border-radius: 0px 4px 4px 0px
                    border: none
                    color: #fff
                    text-transform: uppercase
                    font-size: 16px
                    font-weight: bold