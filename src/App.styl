    .section8
        height 100%
        width 100%
        .section8_wrapper
            margin 0 auto
            max-width 1170px
            .title
                font-size 26px
                text-align center
                padding 70px 0
            .feedback_container
                display flex
                justify-content: space-between
                @media screen and (max-width 780px)
                    flex-direction: column
                    margin: 0 20px 0 auto
                .feedback:hover
                    .user
                        border-color #fff
