    .section9
        height 100%
        width 100%
        background-color #ce4624
        .section9_wrapper
            margin: 0 auto
            max-width: 1170px
            .form_wrapper
                display: flex
                padding: 28px 0
                justify-content: center
                align-items: center
                @media screen and (max-width 670px)
                    flex-direction: column
                .title
                    flex: 1
                    color #fff
                    font-size 18px
                .input_container
                    width: 100%
                    display: flex
                    justify-content: center
                    flex: 3
                    align-items: center
                    input
                        height: 50px
                        width: 70%
                        text-indent: 15px
                        border-radius: 4px 0px 0px 4px
                        border: none
                    button
                        height: 50px
                        background: #000
                        padding: 0 10px
                        border-radius: 0px 4px 4px 0px
                        border: none
                        color: #fff
                        text-transform: uppercase
                        font-size: 16px
                        font-weight: bold
    .section10
        height 100%
        width 100%
        .section10_wrapper
            display flex
            justify-content space-between
            margin: 0 auto 50px auto
            max-width: 1170px
            @media screen and (max-width 780px)
                flex-direction: column
            .list
                width: 23%
                margin: 0 auto
                @media screen and (max-width 780px)
                    width 90%
                .title
                    text-align: left
                    border-bottom: 1px dotted #000
                    border-top: 1px dotted #000
                    padding: 12px 0
                    margin: 32px 0 14px 0
                    color: #000
                    font-size: 20px
                ul
                    list-style none
                    font-size: 15px
                    color: #333
                    line-height: 30px
                    li:hover
                        color #ce4624
