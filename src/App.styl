*
    margin 0
    padding 0
    box-sizing: border-box
    .section1
        width 100%
        height 100%
        background-image url(./images/slider1.jpg)
        background-repeat no-repeat
        background-size cover
        .wrapper_main_section1
            .header
                height 100%
                width 100%
                background-color #1a1816
                .header_wrapper
                    margin 0 auto
                    max-width 1180px
                    display flex
                    justify-content space-between
                    align-items center
                    .contacts
                        list-style none
                        display flex
                        color #878787
                        font-size 15px
                        justify-content space-between
                        align-items: center
                        @media screen and (max-width: 400px)
                            flex-direction: column
                        .mail:hover
                            color #ce4624
                            cursor pointer
                        .mail:before
                            content: "✉"
                            padding-right: 10px
                        .mail
                            padding-right 10px
                        .tel:before
                            content "✆"
                            padding-right: 10px
                    .authorization
                        .login
                            background-color transparent
                            border none 
                            color #878787
                            border-right solid .5px #878787
                            padding 10px 20px
                            text-align center
                            font-size 15px
                        :hover
                            background-color #ce4624
                            color: white
                            cursor pointer
                        .register
                            background-color transparent
                            border none 
                            color #878787
                            text-align center
                            font-size 15px
                            padding 13px 20px
                        :hover
                            background-color #ce4624
                            color: white
                            cursor pointer
            .section1_wrapper
                height 100%
                width 100%
                .navigation
                    background-color rgba(206, 70, 36, 0.5)
                    .navigation_container
                        max-width 1150px
                        margin 0 auto
                        display flex
                        justify-content space-between
                        align-items center
                        @media screen and (max-width: 900px)
                            flex-direction: column
                            align-items: flex-start
                        .menu
                            list-style none
                            display flex
                            flex-wrap: wrap
                            align-items center
                            justify-content space-between 
                            color white
                            // @media screen and (max-width: 900px)
                            //     flex-direction: column
                            // .item:hover
                            //     display: flex
                            //     flex-direction: column
                            //     .hereis
                            //         display: block
                            //         padding-top: 20px
                            //         background-color #fff
                            //         padding: 10px 15px;
                            //         display: block;
                            //         font-size: 13px
                            //         color black
                            .item
                                display flex
                                align-items center
                                padding 40px 20px
                                font-size 16px
                                @media screen and (max-width: 900px)
                                    font-size: 14px
                            .item:hover
                                cursor pointer
                .main
                    width 100%
                    display flex
                    justify-content center
                    color white
                    align-items center
                    .main_container
                        text-align center
                        width 63%
                        margin: 115px auto
                        .title
                            font-size 60px
                            display block
                        .info
                            margin-top 40px
                            margin-bottom 10px
                            display block
                            font-size 16px
                        .order
                            color #595959
                            background-color white
                            padding 8px 36px
                            margin-top 40px
                            font-size 15px
                            border-radius 2px
                            text-transform uppercase
                            line-height 28px
                            outline none 
                            border none
                        .order:hover
                            cursor pointer
    .domains
        width 100%
        background-color #ce4624
        .domains_wrapper
            margin: 0 auto
            max-width 1170px
            display flex
            justify-content space-between
            align-items center
            padding: 15px
            @media screen and (max-width: 900px)
                flex-direction: column
            .left
                width 100%
                @media screen and (max-width: 900px)
                    margin-bottom: 40px
                .domain_input
                    color #878787
                    height 56px
                    border none
                    width 70%
                    border-radius 0px !important
                    text-indent 12px
                .domain_select
                    color #878787
                    width 14%
                    height 56px
                    border none
                    border-left 1px solid #dadada
                    outline none
                    border-radius 0px !important
                .go
                    background #000
                    color #fff
                    font-weight bold
                    font-size 18px
                    padding 16px 24px
                    border none 
                    outline none
                .go:hover
                    cursor pointer
            .right
                display flex
                align-items center
                color: white
                width: 100%
                .title
                    padding 12px 0
                    font-size 21px
                    margin-left: 25px
                    margin-right: 10px
                    width 25%
                .blocks
                    display flex
                    width: 70%
                    justify-content space-around
                    align-items center
                    @media screen and (max-width: 900px)
                        width 60%
                    .domain:hover
                        background-color #000
                        color #fff
                        cursor pointer
                    .domain
                        width: 20%
                        font-size 18px
                        text-align center
                        color #656565
                        border-radius 4px
                        background #fff
                        height 62px
                        display flex
                        flex-direction column
                        @media screen and (max-width: 400px)
                            font-size: 15px
                        .name
                            font-weight bold
                            margin-top 5px
                        .price
                            font-size 15px
                            @media screen and (max-width: 400px)
                                font-size: 8px
    .section2
